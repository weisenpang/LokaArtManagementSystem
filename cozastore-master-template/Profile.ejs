    /* Base Styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    body {
      font-family: 'Poppins', sans-serif;
      background: #f8f9fa;
      color: #333;
      line-height: 1.6;
      min-height: 100vh;
      overflow-y: auto;
    }
    
    .container {
      max-width: 100%;
      background: #fff;
      overflow: hidden;
    }
    
    /* Header Top */
    .header-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 30px;
      background: #fff;
      border-bottom: 1px solid #eee;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    
    .nav-left {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    
    .back-button {
      background: none;
      border: none;
      cursor: pointer;
      color: #555;
      font-size: 20px;
      transition: color 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
    }
    
    .back-button:hover {
      color: #6c7ae0;
      background: #f0f0f0;
    }
    
    .search-bar {
      flex-grow: 1;
      max-width: 500px;
      margin: 0 auto;
      position: relative;
    }
    
    .search-bar input {
      width: 100%;
      padding: 10px 15px 10px 40px;
      border: 1px solid #ddd;
      border-radius: 30px;
      font-size: 14px;
      background: #f5f5f5;
      transition: all 0.3s;
    }
    
    .search-bar input:focus {
      outline: none;
      border-color: #6c7ae0;
      background: #fff;
      box-shadow: 0 0 0 2px rgba(108, 122, 224, 0.2);
    }
    
    .search-bar i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #888;
    }
    
    .icons {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .icons button {
      background: none;
      border: none;
      cursor: pointer;
      color: #555;
      font-size: 18px;
      transition: color 0.3s;
    }
    
    .icons button:hover {
      color: #6c7ae0;
    }
    
    .profile-icon {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: linear-gradient(45deg, #6c7ae0, #8d68c5);
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      font-weight: 600;
      cursor: pointer;
    }
    
    /* Cover Section */
    .header {
      height: 300px;
      background: linear-gradient(45deg, #6c7ae0, #8d68c5);
      position: relative;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
    
    .cover-buttons {
      position: absolute;
      bottom: 20px;
      right: 20px;
      display: flex;
      gap: 10px;
      z-index: 2;
    }
    
    .cover-buttons button {
      padding: 8px 15px;
      border: none;
      border-radius: 4px;
      background: rgba(255, 255, 255, 0.9);
      color: #333;
      cursor: pointer;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .cover-buttons button:hover {
      background: #fff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }
    
    /* Profile Section */
    .profile-section {
      display: flex;
      padding: 0 30px;
      margin-top: -75px;
      position: relative;
      z-index: 3;
      flex-wrap: wrap;
      gap: 25px;
      align-items: flex-start;
    }
    
    .profile-pic {
      position: relative;
      width: 150px;
      height: 150px;
      cursor: pointer;
      border-radius: 12px;
      overflow: hidden;
      border: 5px solid #fff;
      background: #eee;
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
      flex-shrink: 0;
      margin-top: 20px;
    }
    
    .profile-pic img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    
    .profile-pic .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 12px;
      background: rgba(0, 0, 0, 0.5);
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .profile-pic:hover .overlay {
      opacity: 1;
    }
    
    .profile-pic .overlay i {
      font-size: 28px;
    }
    
    /* Profile Details */
    .profile-details {
      flex: 1;
      min-width: 300px;
      padding-bottom: 15px;
    }
    
    .profile-details h2 {
      margin: 15px 0 8px 0;
      font-size: 38px;
      color: #333;
      font-weight: 700;
    }
    
    .profile-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      margin-bottom: 15px;
      color: #666;
      font-size: 15px;
    }
    
    .profile-meta i {
      margin-right: 8px;
      color: #6c7ae0;
      width: 16px;
      text-align: center;
    }
    
    .bio {
      font-size: 15px;
      color: #555;
      line-height: 1.6;
      width: 100%;
      max-width: none;
      background: #f9f9f9;
      padding: 15px;
      border-radius: 8px;
      border-left: 4px solid #6c7ae0;
      margin-bottom: 15px;
    }
    
    /* Social Media Links */
    .social-links {
      display: flex;
      gap: 12px;
      margin-top: 10px;
    }
    
    .social-links a {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: #f0f0f0;
      color: #555;
      transition: all 0.3s;
      text-decoration: none;
    }
    
    .social-links a:hover {
      background: #6c7ae0;
      color: #fff;
      transform: translateY(-2px);
    }
    
    /* Content Tabs */
    .tabs {
      display: flex;
      justify-content: center;
      border-bottom: 1px solid #eee;
      background: #fff;
      margin-top: 20px;
      position: sticky;
      top: 71px;
      z-index: 99;
      overflow-x: auto;
      white-space: nowrap;
    }
    
    .tabs button {
      padding: 16px 20px;
      border: none;
      background: none;
      cursor: pointer;
      font-size: 14px;
      text-transform: uppercase;
      font-weight: 600;
      letter-spacing: 0.5px;
      color: #777;
      transition: all 0.3s;
    }
    
    .tabs button:hover {
      color: #6c7ae0;
      background: rgba(108, 122, 224, 0.05);
    }
    
    .tabs button.active {
      color: #6c7ae0;
      border-bottom: 3px solid #6c7ae0;
    }
    
    /* Content Sections */
    .section {
      padding: 30px;
      display: none;
      background: #fff;
      min-height: 500px;
    }
    
    .section.active {
      display: block;
      animation: fadeIn 0.5s ease;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    .section h3 {
      margin-top: 0;
      color: #333;
      font-size: 22px;
      padding-bottom: 15px;
      border-bottom: 2px solid #f0f0f0;
      margin-bottom: 25px;
    }
    
    /* Profile Info Section */
    .profile-info {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 25px;
    }
    
    .info-card {
      background: #fff;
      border: 1px solid #eee;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
    }
    
    .info-card h4 {
      margin: 0 0 15px;
      color: #333;
      font-size: 18px;
      padding-bottom: 10px;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .info-item {
      display: flex;
      margin-bottom: 12px;
    }
    
    .info-label {
      font-weight: 600;
      color: #555;
      min-width: 120px;
    }
    
    .info-value {
      color: #666;
      flex: 1;
    }
    
    /* Contact Information Social Links */
    .contact-social {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: 5px;
    }
    
    .contact-social a {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background: #f0f8ff;
      color: #6c7ae0;
      transition: all 0.3s;
      text-decoration: none;
    }
    
    .contact-social a:hover {
      background: #6c7ae0;
      color: #fff;
    }
    
    /* Purchase History Section */
    .purchase-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    
    .purchase-table th,
    .purchase-table td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }
    
    .purchase-table th {
      background-color: #f8f9fa;
      font-weight: 600;
      color: #555;
    }
    
    .purchase-table tr:hover {
      background-color: #f9f9f9;
    }
    
    .status {
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 500;
    }
    
    .status.completed {
      background-color: #e6f7ff;
      color: #0091d1;
    }
    
    .status.pending {
      background-color: #fff2e6;
      color: #ff7700;
    }
    
    .status.cancelled {
      background-color: #ffe6e6;
      color: #e74c3c;
    }
    
    /* Posts Grid */
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 15px;
    }
    
    .grid img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
      transition: transform 0.3s;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }
    
    .grid img:hover {
      transform: scale(1.03);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    /* Teams Section */
    .teams {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 25px;
    }
    
    .team-card {
      background: #fff;
      border: 1px solid #eee;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .team-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }
    
    .team-card h3 {
      margin: 0 0 12px;
      color: #333;
      font-size: 18px;
      border-bottom: none;
      padding-bottom: 0;
    }
    
    .team-card p {
      font-size: 14px;
      color: #666;
      line-height: 1.6;
      margin-bottom: 15px;
    }
    
    .tags span {
      display: inline-block;
      background: #f0f8ff;
      padding: 5px 10px;
      margin: 0 8px 8px 0;
      border-radius: 20px;
      font-size: 12px;
      color: #4a8afb;
      font-weight: 500;
    }
    
    .tags span.tag1 { background: #e6f7ff; color: #0091d1; }
    .tags span.tag2 { background: #f0e6ff; color: #7e57c2; }
    .tags span.tag3 { background: #fff2e6; color: #ff7700; }
    
    .members {
      margin-top: 15px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .members img {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #fff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    
    .buy-btn {
      margin-top: 15px;
      padding: 10px 18px;
      border: none;
      background: #6c7ae0;
      color: white;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 500;
      transition: background 0.3s;
    }
    
    .buy-btn:hover {
      background: #5b6ad0;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .profile-section {
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 0 15px;
        margin-top: -60px;
      }
      
      .profile-pic {
        width: 120px;
        height: 120px;
        margin-top: 0;
      }
      
      .profile-details {
        width: 100%;
        padding-bottom: 15px;
      }
      
      .profile-details h2 {
        margin: 10px 0 8px 0;
      }
      
      .profile-meta {
        justify-content: center;
      }
      
      .section {
        padding: 20px 15px;
      }
      
      .teams {
        grid-template-columns: 1fr;
      }
      
      .tabs button {
        padding: 12px 10px;
        font-size: 12px;
      }
      
      .tabs {
        top: 61px;
      }
      
      .purchase-table {
        display: block;
        overflow-x: auto;
      }
    }
    
    @media (max-width: 480px) {
      .header-top {
        flex-direction: column;
        gap: 10px;
        padding: 10px;
      }
      
      .search-bar {
        width: 100%;
        max-width: none;
      }
      
      .tabs {
        flex-wrap: wrap;
        top: 112px;
      }
      
      .tabs button {
        flex: 1;
        min-width: 33%;
        padding: 10px 5px;
        font-size: 11px;
      }
      
      .profile-info {
        grid-template-columns: 1fr;
      }
      
      .info-item {
        flex-direction: column;
        margin-bottom: 15px;
      }
      
      .info-label {
        min-width: 100%;
        margin-bottom: 5px;
      }
    }

